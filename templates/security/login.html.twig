{% extends 'base.html.twig' %}

{% block title %}Se Connecter{% endblock %}

{% block body %}
    {% include './components/_navbar.html.twig' %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <h1 class="nouveau-salon">Se Connecter</h1>
    <div class="form-l">
        <div class="mt-3 name-salon">
            <p>Email</p>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-log" placeholder="Entrez un email" required autofocus>
        </div>
        <div class="mt-3 name-salon">
            <p>Mot de passe</p>
            <input type="password" name="password" id="inputPassword" class="form-log" placeholder="Entrez un mot de passe" required>
        </div>


    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn-go" type="submit">
            Connexion
        </button>
    </div>


</form>
{% endblock %}
