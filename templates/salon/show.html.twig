{% extends 'base.html.twig' %}

{% block title %}Salon{% endblock %}

{% block body %}
    {% include './components/_navbar.html.twig' %}
{% dump(salon) %}
    <div class="ml-2 mt-3">
        <a href="{{ path('salon_index') }}"><i class="fas fa-chevron-left mr-2"></i>Retour</a>
    </div>
    <di class="ml-2 mt-3">
        <h1 class="ml-2 mt-3" style="color: #EC164B"> #{{ salon.name }}</h1>
    </di>
    <div style="color: #ffffff; margin-top: 30px;" >
        <h3 class="text-center mb-2 mt-2"> 13/01/21</h3>

        <p class="text-center mb-2" style="">-</p>
        {% for theme in salon.themes %}
        <h3 class="text-center mb-2">"{{ theme.theme }}"</h3>
        {% endfor %}
    </div>

    {# <h2>Bienvenue dans votre salon {{ salon.name }}</h2>

    <h4> Votre cl√© de salon : {{ salon.slug }}</h4> #}
    <div class="row">
        <div class="col-md-12  mt-5">
            {{ form_start(form, { 'attr': {'class': 'upload-form'} }) }}
            <div class="upload-picture text-center">
                {{ form_row(form.pictureFile, { 'attr': {'class': 'upload-hackathon'} }) }}
            </div>

            <div class="add-legend mt-5 text-center mb-5" style="min-width: 200px;">
                {{ form_row(form.legend) }}
            </div>

            <div class="btn-post-salon mt-4 text-center">
            <button class="btn">{{ button_label|default('Poster !') }}</button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>

