{% extends 'base.html.twig' %}

{% block title %}Salon{% endblock %}

{% block body %}
    {% include './components/_navbar.html.twig' %}
    {% include './component/_back.html.twig' %}
    <div class="ml-2 mt-3">
        <h1 class="ml-2 mt-3 nouveau-salon" style="color: #EC164B"> #{{ salon.name }}</h1>
        <h4> Votre cl√© de salon : {{ salon.slug }}</h4>
    </div>
    <div style="color: #ffffff; margin-top: 30px; display: flex; flex-direction: column; margin-inline-start: 16em" >
        <h3 class="text-center mb-2 mt-2 salon-name" style="margin-inline-start: 4em"> 13/01/21</h3>

        <p class="text-center mb-2 salon-name" style="margin-inline-start: 6em">-</p>
        {% for theme in salon.themes %}
        <h3 class="text-center mb-2 salon-name">"{{ theme.theme }}"</h3>
        {% endfor %}
    </div>

    {# <h2>Bienvenue dans votre salon {{ salon.name }}</h2>#}


    <div class="row">
        <div class="col-md-12  mt-5">
            {{ form_start(form, { 'attr': {'class': 'upload-form'} }) }}
            <div class="upload-picture text-center">
                {{ form_row(form.pictureFile, { 'attr': {'class': 'upload-hackathon'} }) }}
            </div>

            <div class="add-legend mt-5 text-center mb-5 salon-name" style="min-width: 200px; display: flex; flex-direction: column">
                {{ form_row(form.legend) }}
            </div>

            <div class="">
                <button class="btn-go sos">{{ button_label|default('Poster !') }}</button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>

